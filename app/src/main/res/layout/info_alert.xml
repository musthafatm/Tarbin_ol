<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        app:srcCompat="@drawable/pop_up"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/te"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_order_successfully_placed"
        android:textColor="@color/black"
        android:textSize="@dimen/font_large"
        android:layout_below="@+id/imag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <Button
        android:id="@+id/but"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="@drawable/rounded_login_button"
        android:text="@string/alert_dialog_ok"
        android:textColor="@color/black"
        android:layout_below="@+id/te"
        android:layout_centerHorizontal="true" />
</RelativeLayout>